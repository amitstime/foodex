        function CartChange(e) {

            //e.preventDefault();
            var id = e;
            var quant = document.getElementById("inp+" + id).value;
            $.ajax({
                url: '@Url.Action("ChangeCart","ShoppingCart")',
                        type: 'post',
                        cache: false,
                        async: true,
                        data: { id: id, quantity: quant },
                        success: function (result) {
                            $('.cart').html(result);
                        }
                    });
                }
