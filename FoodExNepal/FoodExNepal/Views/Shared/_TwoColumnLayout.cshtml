         function RemoveFromCart(e) {
             //e.preventDefault();
             var id = e;
             //var quant = document.getElementById("int+" + id).value;
             $.ajax({
                 url: '@Url.Action("RemoveFromCart","ShoppingCart")',
                type: 'post',
