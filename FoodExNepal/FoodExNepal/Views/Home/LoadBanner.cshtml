@model IEnumerable<FoodExNepal.Models.Banner>
<style>
    select {
        width: 400px !important;
    }
</style>

    <div class="mainsearch" style="">
        
        <div class="innersearch">
            <div style="float: left; width: 234px; margin-left: 21px; color: white; margin-top: 174px; font-weight: bold; font-size: 15px;">
                Enjoy delicious food from your favorite restaurants
            </div>
            <div style="margin-top: 90px; float: left; width: 341px;">
                @using (Html.BeginForm("Index", "RestaurantList", FormMethod.Get))
                {
                    <p style="color: white; font-weight: bold; font-size: 14px;">Online Food Delivery From The Top Restaurants in Nepal</p>
                   @* <p style="font-size:14px;color:#fff;"><b>Search By &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;  
                    <input type="radio" name="rf" value="Restaurant" @ViewBag.RestaurantSelected  checked="checked" />  <text>Restaurant&nbsp;&nbsp;</text> 
                <input type="radio" name="rf" value="Food Items" @ViewBag.FoodItemsSelected/> <text>Food Items</text>
                      </b> </p>  *@                                                                                            
                    <br />
                    <input type="text" name="txtKeyWord" id="txtKeyWord" placeholder="Food Items" class="form-control" style="width:400px" />
                    <br />
                    @Html.DropDownList("Location", null, "All Location", new { @class = "form-control" })


                    <div class="editor-field" style="padding: 6px 0 0 240px;">
                        <input style="width:160px !important" type="submit" class="form-control" name="submit" value="Find Restaurants" />
                    </div>

                }
            </div>
        </div>

       </div>
    
          <div class="slider-wrapper theme-default">
            <div id="slider" class="nivoSlider">
                @foreach (var banner in Model)
                {
                    <img src="~/images/banner/@banner.BannerImage" data-thumb="~/images/slide.jpg" alt="" />

                }
            </div>
            <div style="width: 100%; text-align: center; position: relative; background:rgba(0, 0, 0, 0.45); height: 50px; margin-top: -60px; z-index:10">
                <div style="margin: 0 auto; padding-left:25%">
                    <ul class="nav navbar-nav" style="margin:0 auto; font-size:15px; padding-top:6px; font-weight:bold; color:white; text-align:center">
                        <li @if ((Request.Path).ToUpper().Contains("HOME")) { <text> class="active" </text>    }><a href="~/Home" style="color:white">HOME</a></li>
                        <li @if ((Request.Path).ToUpper().Contains("ABOUT")) { <text> class="active" </text>    }><a href="~/About" style="color:white">ABOUT</a></li>
                        <li @if ((Request.Path).ToUpper().Contains("RESTAURANTLIST")) { <text> class="active" </text>    }><a href="~/RestaurantList" style="color:white">RESTAURANTS</a></li>
                        <li @if ((Request.Path).ToUpper().Contains("HOWTOORDER")) { <text> class="active" </text>    }><a href="~/HowToOrder" style="color:white">HOW TO ORDER</a></li>
                        <li @if ((Request.Path).ToUpper().Contains("CONTACT")) { <text> class="active" </text>    }><a href="~/Contact" style="color:white">CONTACT</a></li>
                    </ul>
                </div>
            </div>  
                 
        </div>
       
<script type="text/javascript" src="~/Scripts/js/jquery-1.7.1.min.js"></script>
			<script type="text/javascript" src="~/Scripts/js/jquery.nivo.slider.js"></script>
			<script type="text/javascript">
			    $(window).load(function () {
			        $('#slider').nivoSlider();
			    });
			</script>