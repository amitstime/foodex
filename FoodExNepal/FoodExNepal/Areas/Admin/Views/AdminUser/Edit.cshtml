            @Html.EditorFor(model => model.AdminName)
            @Html.ValidationMessageFor(model => model.AdminName)
        </div>
        <div style="clear:both"></div>
        <div class="editor-label">
            @Html.LabelFor(model => model.AdminAddress,"Address")
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.AdminAddress)
            @Html.ValidationMessageFor(model => model.AdminAddress)
        </div>
        <div style="clear:both"></div>
        <div class="editor-label">
            @Html.LabelFor(model => model.AdminPhone,"Admin Phone")
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.AdminPhone)
            @Html.ValidationMessageFor(model => model.AdminPhone)
        </div>
        <div style="clear:both"></div>

