@model FoodExNepal.Models.AdminUser

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Edit Administrator</h2>

@using (Html.BeginForm()) {
