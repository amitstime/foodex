@model IEnumerable<FoodExNepal.Models.Customer>

@{
    ViewBag.Title = "Thrash";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Deleted Costomer</h2>
<p></p>
 @Html.ActionLink("Go Back To List", "index")
<p></p>
<div id="list">
<table>
    <tr>
        <th style="width:150px;">
           Customer Name
        </th>
        <th style="width:150px;">
           User Name
        </th>
        <th style="width:150px;">
            Email
        </th>
        <th style="width:150px;">
       
          Is Active?
        </th>
        <th style="width:100px;">Action</th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Email)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Address)
        </td>
        
      
        <td>
            @if(item.IsActive==true)
            {
                <img src="~/images/tick.png">
                
            }
            else if (item.IsActive == false)
            {
                <img src="~/images/untick.png">
            }
            
        </td>
        <td>
           
            @Html.ActionLink(" ", "Details", new { id=item.CustomerId }, new {@class = "icon-detail icon_font" }) |
            @Html.ActionLink(" ", "Restore", new { id=item.CustomerId }, new {@class = "icon-restore icon_font" }) | 
            @Html.ActionLink(" ", "Delete", new { id=item.CustomerId }, new {@class = "icon-delete icon_font" })
            
        </td>
    </tr>
}

</table>
</div>